{
    "extends": "../configs/strict",
    "compilerOptions": {
        "lib": ["es2021"],
        "module": "esnext",
        "target": "es2021",
        "esModuleInterop": true,
        "moduleResolution": "node",

        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "outDir": "build",

        "allowSyntheticDefaultImports": true,
        "noEmitHelpers": true,

        "pretty": true,
    },
    "files": [
        "src/index.ts"
    ]
}